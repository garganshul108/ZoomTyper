{
    "manifest_version": 2,
    "name" : "ZoomTyper",
    "version" : "0.0.1",
    "web_accessible_resources":[
        "kittens/*.jpg"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],

            "js" : [
                "content.js"
            ]
        }
    ],

    "background":{
        "scripts": [ 
            "background.js"
         ]
    },

    "browser_action":{
        "default_popup" : "popup.html",
        "default_title": "A pop will appear"
    }
}

